{
  "expo": {
    "name": "BHT Detector",
    "slug": "bht-detector-mobile",
    "version": "1.0.0",
    "description": "Aplicativo mobile para detectar BHT em rótulos de alimentos. Criado por Costanza Pasquotto Assef.",
    "author": "Costanza Pasquotto Assef",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "bhtdetectormobile",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff",
      "dark": {
        "backgroundColor": "#000000"
      }
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.costanza.bhtdetector",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSCameraUsageDescription": "O app precisa de acesso à câmera para escanear rótulos de alimentos.",
        "NSPhotoLibraryUsageDescription": "O app precisa de acesso às suas fotos para analisar rótulos de alimentos."
      }
    },
    "android": {
      "package": "com.costanza.bhtdetector",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "name": "BHT Detector - Costanza Pasquotto Assef",
      "shortName": "BHT Detector",
      "lang": "pt-BR",
      "scope": "/",
      "themeColor": "#0a7ea4",
      "description": "Aplicativo desenvolvido por Costanza Pasquotto Assef para detectar BHT em rótulos de alimentos. Use a câmera para escanear e descobrir se o produto contém Butylated Hydroxytoluene.",
      "startUrl": "/",
      "display": "standalone",
      "orientation": "portrait",
      "backgroundColor": "#ffffff",
      "bundler": "metro",
      "preventAutoOpenAsync": false,
      "build": {
        "babel": {
          "include": [
            "@expo/metro-runtime"
          ]
        }
      }
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "O app precisa de acesso à câmera para escanear rótulos de alimentos."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "O app precisa de acesso às suas fotos para analisar rótulos de alimentos."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
